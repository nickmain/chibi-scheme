(define-library (hello)
  (import (scheme base))
  (begin
    (define (main args)
      (write-string "Hello, ")
      (write-string (if (pair? args) (car args) "world!"))
      (newline))
    (define (bye args)
      (write-string "Goodbye, ")
      (write-string (if (pair? args) (car args) "world!"))
      (newline))))
